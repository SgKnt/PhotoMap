<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PhotoFragment">

    <ImageView
        android:id="@+id/photo_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/location_input"/>
    <TextView
        android:id="@+id/label_location_input"
        android:layout_width="@dimen/label_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:text="@string/label_location"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:layout_marginStart="@dimen/margin_start"
        app:layout_constraintTop_toTopOf="@id/location_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/location_input" />
    <EditText
        android:id="@+id/location_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top_bottom"
        app:layout_constraintStart_toEndOf="@id/label_location_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/memo_input" />

    <TextView
        android:id="@+id/label_memo_input"
        android:layout_width="@dimen/label_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:text="@string/label_memo"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:layout_marginStart="@dimen/margin_start"
        app:layout_constraintTop_toTopOf="@id/memo_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memo_input"/>
    <EditText
        android:id="@+id/memo_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:inputType="textMultiLine"
        android:lines="3"
        android:layout_marginStart="@dimen/margin_start"
        app:layout_constraintStart_toEndOf="@id/label_memo_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/save_photo_button"/>
    <Button
        android:id="@+id/save_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:textSize="@dimen/font_size"
        android:text="@string/label_save_photo_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>