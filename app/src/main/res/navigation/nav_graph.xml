<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/cameraFragment"
        android:name="jp.ac.titech.itpro.sdl.myapp.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_camera_to_photo"
            app:destination="@id/photoFragment" />
        <action
            android:id="@+id/action_camera_to_map"
            app:destination="@id/mapFragment" />
        <argument
            android:name="latlong"
            app:argType="jp.ac.titech.itpro.sdl.myapp.LatLong"/>
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="jp.ac.titech.itpro.sdl.myapp.MapFragment"
        android:label="MapFragment" >
        <action
            android:id="@+id/action_map_to_camera"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoFragment"
        android:name="jp.ac.titech.itpro.sdl.myapp.PhotoFragment"
        android:label="photo_fragment"
        tools:layout="@layout/photo_fragment" >
        <action
            android:id="@+id/action_photo_to_map"
            app:destination="@id/mapFragment" />
    </fragment>
</navigation>